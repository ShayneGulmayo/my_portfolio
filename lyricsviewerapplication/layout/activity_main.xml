<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#83542D"
        android:text="@string/song1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/imgSong1"
        app:layout_constraintTop_toBottomOf="@+id/imgSong5" />

    <Button
        android:id="@+id/btnSong5"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#618595"
        android:text="@string/song5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/imgSong5"
        app:layout_constraintTop_toBottomOf="@+id/imgSong4" />

    <Button
        android:id="@+id/btnSong3"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#1E1C16"
        android:text="@string/song3"
        app:layout_constraintBottom_toTopOf="@+id/btnSong4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/imgSong3"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSong4"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#515050"
        android:text="@string/song4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/imgSong4"
        app:layout_constraintTop_toBottomOf="@+id/imgSong3" />

    <Button
        android:id="@+id/btnSong2"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#D296D5"
        android:text="@string/song2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toEndOf="@+id/imgSong2"
        app:layout_constraintTop_toBottomOf="@+id/imgSong1" />

    <ImageView
        android:id="@+id/imgSong1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSong5"
        app:srcCompat="@drawable/ab67616d0000b273983f594ce5c3bd6d5140e44c" />

    <ImageView
        android:id="@+id/imgSong3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        app:srcCompat="@drawable/toosweet" />

    <ImageView
        android:id="@+id/imgSong4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSong3"
        app:srcCompat="@drawable/folklore" />

    <ImageView
        android:id="@+id/imgSong5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSong4"
        app:srcCompat="@drawable/everysummertime" />

    <ImageView
        android:id="@+id/imgSong2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSong1"
        app:srcCompat="@drawable/lover" />

</androidx.constraintlayout.widget.ConstraintLayout>